@model Finder.Application.DTOs.PlaneDtos.CreatePlaneDto
@{
    ViewData["Title"] = "Create Plane";
}

<h2>Create Plane</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ICAOCode" class="control-label"></label>
        <input asp-for="ICAOCode" class="form-control" />
        <span asp-validation-for="ICAOCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IATACode" class="control-label"></label>
        <input asp-for="IATACode" class="form-control" />
        <span asp-validation-for="IATACode" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
 </form>

