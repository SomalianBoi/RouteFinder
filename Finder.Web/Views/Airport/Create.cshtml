@model Finder.Application.DTOs.AirportDtos.CreateAirportDto

@{
    ViewData["Title"] = "Create Airline";
}

<h2>Create Airline</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="City" class="control-label"></label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IataCode" class="control-label"></label>
        <input asp-for="IataCode" class="form-control" />
        <span asp-validation-for="IataCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IcaoCode" class="control-label"></label>
        <input asp-for="IcaoCode" class="form-control" />
        <span asp-validation-for="IcaoCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Country" class="control-label"></label>
        <input asp-for="Country" class="form-control" />
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
